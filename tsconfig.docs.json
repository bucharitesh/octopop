{
  "extends": "@octopop/tsconfig/base.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "es2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true,
    "customConditions": ["node"],
    "declarationDir": "dts",
    "outDir": "dts"
  },
  "include": [
    "packages/*/src/**/*",
    "packages/*/types/**/*",
    "types/**/*"
  ]
}